{
    // Automatically trim trailing whitespace on save
    "files.trimTrailingWhitespace": true,

    // Insert final newline at end of file
    "files.insertFinalNewline": true,

    // Trim final newlines (keep only one)
    "files.trimFinalNewlines": true,

    // Java formatting settings
    "java.format.settings.url": "config/checkstyle/checkstyle.xml",
    "java.format.settings.profile": "GoogleStyle",

    // Editor settings for consistency
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,

    // Markdown specific settings
    "[markdown]": {
        "files.trimTrailingWhitespace": true,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },

    // Java specific settings
    "[java]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true
    },

    // JSON specific settings
    "[json]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    "[jsonc]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },

    // Checkstyle configuration
    "java.checkstyle.configuration": "${workspaceFolder}/config/checkstyle/checkstyle.xml",
    "java.checkstyle.version": "10.12.4"
}
