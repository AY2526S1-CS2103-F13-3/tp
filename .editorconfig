# EditorConfig helps maintain consistent coding styles
# See https://editorconfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown files (preserve trailing spaces for line breaks if needed)
[*.md]
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Java files
[*.java]
indent_size = 4
max_line_length = 120

# XML files (like POM and config files)
[*.xml]
indent_size = 2

# Gradle files
[*.gradle]
indent_size = 4

# Shell scripts
[*.sh]
end_of_line = lf

# Batch files
[*.bat]
end_of_line = crlf
